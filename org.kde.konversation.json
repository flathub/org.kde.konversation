{
    "id": "org.kde.konversation",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.6",
    "sdk": "org.kde.Sdk",
    "command": "konversation",
    "rename-icon": "konversation",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=org.kde.kssld5"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig"
    ],
    "modules": [
        {
            "name": "qca",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DBUILD_WITH_QT6=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/qca/2.3.8/qca-2.3.8.tar.xz",
                    "sha256": "48759ca86a0202461d908ba66134380cc3bb7d20fed3c031b9fc0289796a8264",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 13606,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/qca/$version/qca-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "konversation",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.05.0/src/konversation-24.05.0.tar.xz",
                    "sha256": "f38e56bb5b99d3d15870ecf39419031862e6781cd16266dc33625434124b1f9b",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/konversation-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
