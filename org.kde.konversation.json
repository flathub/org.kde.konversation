{
    "id": "org.kde.konversation",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "konversation",
    "rename-icon": "konversation",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=org.kde.kssld5"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/share/doc",
        "/share/man",
        "/share/qlogging-categories6"
    ],
    "modules": [
        {
            "name": "konversation",
            "buildsystem": "cmake-ninja",
            "post-install": [
              "mkdir $FLATPAK_DEST/lib/",
              "ln -vs /usr/lib/libqca-qt6.so.2 $FLATPAK_DEST/lib/libqca-qt6.so.2"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.12.2/src/konversation-25.12.2.tar.xz",
                    "sha256": "fe7f8e4e4be2e80d1f367c4339eb227852e69f533d2d4145d9d2005c0d7021f2",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/konversation-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
