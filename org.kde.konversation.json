{
    "id": "org.kde.konversation",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "konversation",
    "rename-icon": "konversation",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=org.kde.kssld5"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig"
    ],
    "modules": [
        {
            "name": "qca",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DBUILD_WITH_QT6=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/qca/2.3.10/qca-2.3.10.tar.xz",
                    "sha256": "1c5b722da93d559365719226bb121c726ec3c0dc4c67dea34f1e50e4e0d14a02",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 13606,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/qca/$version/qca-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "konversation",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.08.0/src/konversation-25.08.0.tar.xz",
                    "sha256": "7fb824266234c3ccbd5f4ed751b7f89688dbfc1bcba50a164d33eb3a27b9073f",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/konversation-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
